<?xml version ="1.0" encoding="utf-8" ?>

<odoo>
    <record id="sh_stock_landed_cost_config_cancel_form_inherit" model="ir.ui.view">
        <field name="name">stock.landed.cost.config.cancel.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block name="operations_setting_container" position="after">
                <block title="Landed Cost Cancel Configuration" name="config_lended_cost_cancel" groups="sh_all_in_one_cancel_adv.group_sh_stock_landed_cost_cancel">
                    <setting id="landed_cost_operation_type_setting">
                        <field name="landed_cost_operation_type" widget="radio" />
                    </setting>
                </block>
            </block>
        </field>
    </record>
</odoo>
